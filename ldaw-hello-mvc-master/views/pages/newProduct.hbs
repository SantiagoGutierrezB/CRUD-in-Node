<form method="POST">
    <div class="form-group">
        <label for=" name">Name</label>
        <input type="text" name="name" class="form-control" id="name" placeholder="Enter the name of the product...">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" name="description" class="form-control" id="description" placeholder="Enter the description..."></textarea>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" name="price" step="0.01" min="0" class="form-control" id="price" placeholder="Enter the price...">
    </div>

    <button type="submit" class="btn btn-outline-primary">Create</button>
    <a href="/" type="button" class="btn btn-outline-secondary">Cancel</a>
</form>