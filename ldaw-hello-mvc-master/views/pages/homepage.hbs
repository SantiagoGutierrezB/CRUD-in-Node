<h2>Our products</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row">
                <a href="/product/{{id}}" class="list-group-item-action">
                    {{id}}
                </a>
            </th>
            <td>
                <a href="/product/{{id}}" class="list-group-item-action">
                    {{name}}
                </a>
            </td>
            <td>
                <a href="/product/{{id}}" class="list-group-item-action">
                    {{description}}
                </a>
            </td>
            <td>
                <a href="/product/{{id}}" class="list-group-item-action">
                    {{price}}
                </a>
            </td>
            {{!-- <button type="submit" class="btn btn-outline-danger">Delete</button> --}}
            <td>
                <form method="POST">
                    <input type="hidden" value="{{id}}" name="id">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a type="button" class="btn btn-outline-success" href="/newProduct">Add</a>