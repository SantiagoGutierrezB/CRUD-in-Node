<form method="POST">
    <div class="form-group">
        <label for=" name">Name</label>
        <input type="text" name="name" class="form-control" id="name" value="{{product.name}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" name="description" class="form-control" id="description">{{product.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" name="price" step="0.01" min="0" class="form-control" id="price" value="{{product.price}}">
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a type="button" class="btn btn-outline-secondary" href="/product/{{product.id}}">Cancel</a>
</form>